#!/bin/sh

#color
alias ls='ls --color=auto'
alias grep='grep --color=auto'

#duplicate
alias php='/usr/local/Cellar/php56/5.6.2/bin/php'

#ls
alias la='ls -a'
alias ll='ls -l'

#tmux
alias tmux='tmux -2' # run with 256 colors
alias trx='tmux resize -x'
alias try='tmux resize -y'

#git
alias gs='git status'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit -m'
alias gca='git commit -am'
alias gl='git log'
alias gll='git pull'
alias gsh='git push'

#ssh
alias irc='mosh irc'
alias pi='mosh pi'
alias spi='ssh pi'
alias nollkit='ssh nollkit'
alias styrit='ssh styrit'
alias backup='ssh pi \"backup\"'

#selfcreated apps
alias chp='php ~/java -jar ~/Programmering/Java/chp/chp.jar'
alias snapchat='php ~/Programmering/php/Snapchat/snapchat.php'
alias lsn='snapchat -s v'

#other
alias ql='qlmanage -p "$1" >& /dev/null'
alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"
alias spotify='sh ~/Applications/spotify'
alias gitinspector='python ~/Applications/gitinspector/gitinspector/gitinspector.py -wTl'
alias qute='qutebrowser;exit;'

alias wwwim='vim scp://pi/www/'
