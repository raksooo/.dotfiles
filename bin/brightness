#!/bin/sh

min_number() {
    printf "%s\n" "$@" | sort -g | head -n1
}

max_number() {
    printf "%s\n" "$@" | sort -g -r | head -n1
}

current=$(cat /sys/class/backlight/intel_backlight/actual_brightness)
max=$(cat /sys/class/backlight/intel_backlight/max_brightness)
min=0

if [[ $1 == "max" ]]; then
    new=$max
elif [[ $1 == "min" ]]; then
    new=$min
    sleep 0.5 && xset dpms force off &
elif [[ $1 == "abs" ]]; then
    new=$2
elif [ -n "$1" ]; then
    new=$(expr $current + $1)
    new=$(min_number $new $max)
    new=$(max_number $new 0)
else
    echo "Current:  $current"
    echo "Max:  $max"
    echo "Min:  $min"
    exit 0
fi

sudo tee /sys/class/backlight/intel_backlight/brightness <<< $new

