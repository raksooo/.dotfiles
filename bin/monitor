#!/usr/bin/env sh

if [[ $1 == "work" ]]; then
    xrandr --output eDP1 --auto --output DP1 --auto --panning 3840x2160+3200+0 \
        --scale 2x2 --right-of eDP1
elif [[ $1 == "off" ]]; then
    xrandr --output DP1 --off
else
    xrandr --output DP1 --auto --right-of eDP1
fi

echo "awesome.restart()" | awesome-client
