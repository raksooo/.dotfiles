# Screen brightness

XF86MonBrightnessDown
    brightness -50
XF86MonBrightnessUp
    brightness 50
super + F7
    brightness min
F7
    brightness max

# Playback control
XF86AudioPlay
    playerctl play-pause
XF86AudioPrev
    playerctl previous
XF86AudioNext
    playerctl next

# Volume control
XF86AudioRaiseVolume
    amixer sset Master 5%+ && awesome-client "volume.update()"
XF86AudioLowerVolume
    amixer sset Master 5%- && awesome-client "volume.update()"
XF86AudioMute
    amixer sset Master toggle && awesome-client "volume.update()"

# Terminal
super + Return
    urxvt

# Browser
super + shift + Return
    qutebrowser --backend webengine

# Launcher
super + space
    rofiHistory

# Lock X
alt + space
    lock

# Take screenshot
Print
    maim /home/oskar/documents/Bilder/screenshots/$(date +%F-%T).png \
        && mpg123 ~/.local/share/oskar/screenshot.mp3

