# Screen brightness

XF86MonBrightnessDown
    brightness -50
XF86MonBrightnessUp
    brightness 50
super + F7
    brightness min
F7
    brightness max

# Playback control
XF86AudioPlay
    playerctl play-pause
XF86AudioPrev
    playerctl previous
XF86AudioNext
    playerctl next

# Volume control
XF86AudioRaiseVolume
    amixer sset Master 5%+ && echo 'updateVolumeWidget()' | awesome-client
XF86AudioLowerVolume
    amixer sset Master 5%- && echo 'updateVolumeWidget()' | awesome-client
XF86AudioMute
    amixer sset Master toggle && echo 'updateVolumeWidget()' | awesome-client

# Terminal
super + Return
    urxvt

# Browser
super + shift + Return
    qutebrowser

# Launcher
super + space
    rofiHistory

# Lock X
alt + space
    slock & sh -c "sleep 0.5 && xset dpms force off"

# Take screenshot
Print
    maim /home/oskar/documents/Bilder/screenshots/$(date +%F-%T).png \
        && mpg123 ~/.local/share/rascal/screenshot.mp3

# Restore wifi connection
XF86Search
    reconnectWifi

