# Screen brightness

XF86MonBrightnessDown
    brightness -50
XF86MonBrightnessUp
    brightness 50
super + F7
    brightness max
super + shift + F7
    brightness min

F7
    systemctl suspend

# Playback control
XF86AudioPlay
    playerctl play-pause
XF86AudioPrev
    playerctl previous
XF86AudioNext
    playerctl next

# Volume control
XF86AudioRaiseVolume
    amixer sset Master 5%+ && awesome-client "volume.update()"
XF86AudioLowerVolume
    amixer sset Master 5%- && awesome-client "volume.update()"
XF86AudioMute
    amixer sset Master toggle && awesome-client "volume.update()"

# Terminal
super + Return
    termite

# Browser
super + shift + Return
    qutebrowser

# Launcher
super + space
    rofiHistory

# Lock X
alt + space
    awesome-client "lock.lock()"

# Take screenshot
Print
    maim /home/oskar/documents/screenshots/$(date +%F-%T).png \
        && mpg123 ~/.local/share/oskar/screenshot.mp3

# Restart netctl-auto
super + Print
    sudo systemctl restart netctl-auto@wlp58s0.service

