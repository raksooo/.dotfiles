#!/bin/sh

# Caps as escape
setxkbmap se -option 'lv3:caps_switch'
xcape -e 'ISO_Level3_Shift=Escape'
[[ -f ~/.Xmodmap ]] && xmodmap ~/.Xmodmap

# Xresources
[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources
[[ -f ~/.Xresources_rofi ]] && xrdb -merge -I$HOME ~/.Xresources_rofi
[[ -f ~/.Xresources_theme ]] && xrdb -merge -I$HOME ~/.Xresources_theme

# Autostart
unclutter -idle 1 &
slock &
nm-applet &
redshift 57.705829:11.990570 &
xcompmgr &

# Autostart applications
sleep 60 && syncdrive &
qutebrowser &
urxvt &
urxvt &

# Startup sound
sleep 3 && mpg123 ~/.local/share/rascal/boot.mp3 &

# Start awesome
exec awesome

