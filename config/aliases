#!/bin/sh

alias pls='sudo $(fc -ln -1)'

#color
alias ls='ls --color=auto'
alias grep='grep --color=auto'

#tmux
alias tmux='tmux -2' # run with 256 colors

#git
alias gs='git status'
alias gd='git diff'
alias ga='git add'
alias gap='git add -p'
alias gaa='git add -A'
alias gc='git commit -m'
alias gca='git commit -am'

#other
alias brunox='ssh -XC bruno'

alias feh='feh -.'
alias spotify='spotify --force-device-scale-factor=1.7'
alias mist='/usr/bin/mist --syncmode light --node-port 16926'
alias qutebrowser='qutebrowser --qt-flag=force-webrtc-ip-handling-policy=default_public_interface_only'
alias firefox='env GTK_THEME=Adwaita:light firefox'

