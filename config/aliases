#!/bin/sh

#color
alias ls='ls --color=auto'
alias grep='grep --color=auto'

#tmux
alias tmux='tmux -2' # run with 256 colors

#git
alias gs='git status'
alias ga='git add'
alias gaa='git add -A'
alias gc='git commit -m'
alias gca='git commit -am'
alias gl='git log'
alias gll='git pull'
alias gsh='git push'

#other
alias brunox='ssh -XC bruno'

alias feh='feh -.'
alias spotify='spotify --force-device-scale-factor=1.7'
alias mist='/usr/bin/mist --syncmode light'
alias qutebrowser='qutebrowser --qt-flag=force-webrtc-ip-handling-policy=default_public_interface_only'

